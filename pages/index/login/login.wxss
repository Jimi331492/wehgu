/* pages/index/login/login.wxss */
@import "/style/animation.wxss";
.container {
    width: 100vw;
    height: 100vh;
    display: flex;
    justify-content: center;
}

.bg1 {
    width: 100vw;
    height: 100vh;
    z-index: -1;
}

.container .container-2 {
    width: 100vw;
    height: 70vh;
    padding: 5vh;
    position: absolute;
    bottom: 21vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
}

.container-2 .wx-login {
    width: 64vw;
    height: 7vh;
    font-size: 40rpx;
    background-color: #46D88A;
    color: #fff;
    z-index: 99;
}

.container-2 .welcome-word {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 100%;
    font-size: 74rpx;
}

.welcome-word .word-1 {
    padding-top: 5vh;
}

.welcome-word .word-2 {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding-bottom: 2vh;
    line-height: 2.5rem;
    font-size: 40rpx;
    opacity: 0.8;
}

.container-2 .no-login {
    padding: 0;
    border-bottom: 1px solid;
    color: #000;
}

.container-2 .code-login {
    position: absolute;
    bottom: -8vh;
    font-size: 64rpx;
}

.mm-modal-body {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
}

.mm-modal .tel-login {
    width: 70vw;
    height: 6vh;
    background-color: #336bff;
    color: #fff;
    font-size: 40rpx;

}

.mm-modal-body .mm-text {
    font-size: 40rpx;
}

.mm-modal-body .mm-input-box {
    display: flex;
    align-items: center;
    justify-self: center;
    width: 60vw;
    height: 5vh;
    border-radius: 20rpx;
    border: solid 5rpx black;
    text-align: left;
    font-size: 48rpx;
    padding: 10rpx;

}

.mm-input-box .mm-input {
    width: 100%;
    height: 100%;
    padding-left: 6rpx;
    padding-bottom: 3rpx;
}


.mm-modal-body .check-success {
    border: solid 5rpx #336bff;
}

.mm-modal-body .check-fail:hover {
    border: solid 5rpx red;
}

.mm-modal-body .check-success:hover {
    border: solid 5rpx #336bff;
}

.mm-input-box .mm-input-placeholder {
    font-size: 48rpx;
}

.mm-modal-body .code-list {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 60vw;
    height: 7vh;
    margin-left: 5vw;
}

.code-list .code-input {
    width: 0;
    height: 0
}

.code-list .code-item {
    display: inline-block;
    width: 10vw;
    height: 10vw;
    margin-right: 5vw;
    border-radius: 1vw;
    background-color: #0044ff;
    color: white;
    font-size: 48rpx;
}

.code-list .theme-color {
    background-color: #336bff;
}

.mm-modal-body .send-btn[disabled] {
    color: #fff;
    background-color: #333333 !important;
}