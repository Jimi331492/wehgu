/* pages/info/home/home.wxss */
.list {
    width: 100vw;
    display: flex;
    flex-direction: column;
    align-items: center;
    position: relative;
}

.item:nth-child(2) {
    border-radius: 1rem 1rem 0 0;
}

.item:nth-last-child(1) {
    border-radius: 0 0 1rem 1rem;
}

.item {
    width: 80vw;
}

.order-info {
    position: relative;
}

.order-info .pick-site-box::after {
    content: '';
    position: absolute;
    bottom: -15rpx;
    left: 0;
    width: 70vw;
    height: 3rpx;
    opacity: 0.8;
    background-color: gray;
}

.item:nth-last-child(1) .order-info .pick-site-box::after {
    opacity: 0;
}

.mm-modal-body {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;

}
