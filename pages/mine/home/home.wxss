/* pages/mine/home/home.wxss */

.scrollPage .placeholder-1 {
    width: 100vw;
    height: 550rpx;
}

.scrollPage .avatar-filter-bg {
    width: 100vw;
    height: 550rpx;
    filter: blur(8rpx);
    overflow: hidden;
    position: absolute;
    top: 0;
    z-index: -100;
}



.avatar-filter-bg .avatar-img {
    width: 100vw;
    height: 550rpx;
}

.scrollPage .user-avatar {
    width: 100vw;
    height: 550rpx;
    position: absolute;
    top: 0;
    z-index: 99;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    color: #fff;
}

.user-avatar .xxxl {
    width: 10rem;
    height: 10rem;
}

.user-avatar .nickname {
    display: flex;
    justify-content: center;
}

.user-avatar .auth-status {
    align-self: flex-end;
}

.user-avatar .introduce {
    display: flex;
    justify-content: center;
    opacity: 0.8;
}

.to-login {
    border-bottom: solid 1rpx white;
}

.edit-btn {
    width: 22vw;
    position: absolute;
    top: 5vw;
    right: 5vw;
    background-color: #000;
    color: #fff;
    opacity: 0.6;
}