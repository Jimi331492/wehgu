/* pages/mine/edit/edit.wxss */
.xxxl {
    width: 10rem;
    height: 10rem;
}

.mm-tag {
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
    z-index: 100;
    width: 1.5rem;
    height: 1.5rem;
    font-size: 1rem;
    top: 2rem;
    left: 7.5rem;
}

.mm-btn {
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
    z-index: 100;
    width: 3rem;
    height: 2rem;
    font-size: 1rem;
    bottom: 1.5rem;
    left: 2.5rem;
}

.mm-modal-body {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
}

.mm-modal .tel-login {
    width: 70vw;
    height: 6vh;
    background-color: #336bff;
    color: #fff;
    font-size: 40rpx;

}

.mm-modal-body .mm-text {
    font-size: 40rpx;
}

.mm-modal-body .mm-input-box {
    display: flex;
    align-items: center;
    justify-self: center;
    width: 60vw;
    height: 5vh;
    border-radius: 20rpx;
    border: solid 5rpx black;
    text-align: left;
    font-size: 48rpx;
    padding: 10rpx;

}

.mm-input-box .mm-input {
    width: 100%;
    height: 100%;
    padding-left: 6rpx;
    padding-bottom: 3rpx;
}


.mm-modal-body .check-success {
    border: solid 5rpx #336bff;
}

.mm-modal-body .check-fail:hover {
    border: solid 5rpx red;
}

.mm-modal-body .check-success:hover {
    border: solid 5rpx #336bff;
}

.mm-input-box .mm-input-placeholder {
    font-size: 48rpx;
}

.mm-modal-body .code-list {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 60vw;
    height: 7vh;
    margin-left: 5vw;
}

.code-list .code-input {
    width: 0;
    height: 0
}

.code-list .code-item {
    display: inline-block;
    width: 10vw;
    height: 10vw;
    margin-right: 5vw;
    border-radius: 1vw;
    background-color: #0044ff;
    color: white;
    font-size: 48rpx;
}

.code-list .theme-color {
    background-color: #336bff;
}

.mm-modal-body .send-btn[disabled] {
    color: #fff;
    background-color: #333333 !important;
}

.cu-form-group .introduce-box {
    height: 10vh;
}

.cu-form-group .introduce-input {
    height: 10vh;
}

.tip{
    display: flex;
    flex-direction: column;
    
}