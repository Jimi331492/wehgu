    display: flex;
    justify-content: space-between;
    width: 49%;
    margin: 5rpx 0 !important;
    padding-top: 10rpx;
    border-radius: 10rpx;
}

.post-list .post-item .image.mm-img {
    margin: 0 20rpx;
}

